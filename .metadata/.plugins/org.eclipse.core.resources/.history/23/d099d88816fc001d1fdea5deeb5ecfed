package secion5;

public class bildingBufferReview {

	public static void main(String[] args) {
String name = "Matt";//create string
		
		name = "Matthew";//creating a new string and 'name' now points to theis new string

		StringBuilder builder = new StringBuilder("Hello");
		
		builder.append("World");// HelloWorld
		
		StringBuffer sBuffer = new StringBuffer("Open");
		
		sBuffer.append("Door");
		
		System.out.println(builder);
		
		System.out.println(sBuffer);
	}

}
