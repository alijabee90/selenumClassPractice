package seleniumHomework;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;

public class indeedHomeWrok {

	public static void main(String[] args) throws InterruptedException {
		System.setProperty("webdriver.chrome.driver","C:\\Users\\alija\\OneDrive\\Desktop\\web tools\\selenium-java-3.141.59\\chroomdriver\\chromedriver_win32/chromedriver.exe");
        WebDriver driver = new ChromeDriver();
        driver.get("https://www.indeed.com/");
        
        // Step 1: Get the current URL and store it in a variable called homeURL
        String homeURL = driver.getCurrentUrl();
        System.out.println("Home URL is: " + homeURL);

        // Step 2: Get the website title and store it in a variable called homeTitle
        String homeTitle = driver.getTitle();
        System.out.println("Title is: " + homeTitle);

        // Step 3: Find the input field for WHAT and type "SDET"
        WebElement what = driver.findElement(By.name("q"));
        what.sendKeys("SDET");

        // Step 4: Find the Search button and click on it
        WebElement searchButton = driver.findElement(By.className("icl-WhatWhere-button"));
        searchButton.click();

        // Wait for a short time to allow the search results to load
        Thread.sleep(1000);

        // Step 5: Get the current URL and store it as a variable called searchURL
        String searchURL = driver.getCurrentUrl();
        System.out.println("Search URL is: " + searchURL);

        // Step 6: Get the website title and store it in a variable called searchTitle
        String searchTitle = driver.getTitle();
        System.out.println("Search Title is: " + searchTitle);

        // Step 7: Verify that searchURL does not equal to homeURL and contains the search criteria
        if (!searchURL.equals(homeURL) && searchURL.contains("SDET")) {
            System.out.println("Step 7: Passed - searchURL is different from homeURL and contains the search criteria.");
        } else {
            System.out.println("Step 7: Failed - searchURL is equal to homeURL or does not contain the search criteria.");
        }

        // Step 8: Verify that searchTitle does not equal to homeTitle and has the search criteria
        if (!searchTitle.equals(homeTitle) && searchTitle.contains("SDET")) {
            System.out.println("Step 8: Passed - searchTitle is different from homeTitle and has the search criteria.");
        } else {
            System.out.println("Step 8: Failed - searchTitle is equal to homeTitle or does not have the search criteria.");
        }

        // Step 9: Get Text of the JobsInLocation field and store it in a variable called jobsInLocation_text
        WebElement jobsInLocation = driver.findElement(By.id("searchCountPages"));
        String jobsInLocation_text = jobsInLocation.getText();

        // Verify if it's equal to your search criteria (in this case, "SDET")
        if (jobsInLocation_text.contains("SDET")) {
            System.out.println("Step 9: Passed - The JobsInLocation field contains the search criteria.");
        } else {
            System.out.println("Step 9: Failed - The JobsInLocation field does not contain the search criteria.");
        }

        // Close the browser
        driver.quit();
    }
}